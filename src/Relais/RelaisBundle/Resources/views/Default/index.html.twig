{% extends "::base.html.twig" %}
{% block contenuglobal %}

<div id="conteneurmenu">

	<div id="conteneurpage">
		{% block body %}{% endblock %}
	</div>

	<div id="conteneurD3">
		{% block d3 %}{% endblock %}
	</div>

	{% if is_granted('ROLE_ADMIN') %}
		<div id="conteneurtests">
			{% block tests %}{{ include('RelaisRelaisBundle:Default:test.html.twig') }}{% endblock %}
		</div>
	{% endif %}

	{{ include('RelaisRelaisBundle:Menus:menusite.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:menuvues.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:menudonnees.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:menutools.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:recherche.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:options.html.twig') }}
	{{ include('RelaisRelaisBundle:Menus:infos.html.twig') }}

	{% if is_granted('ROLE_ADMIN') %}
		{{ include('RelaisRelaisBundle:Menus:menuadmin.html.twig') }}
	{% endif %}
	{{ include('RelaisRelaisBundle:Menus:menuuser.html.twig') }}
</div>

{% endblock %}

{% block js %} {{ parent() }}
	{% javascripts '@RelaisRelaisBundle/Resources/public/js/public/*' %}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
	<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
	<script type="text/javascript">
	$(document).ready(function() {
		showInfos('{{ path('relais_relais_layoutInfos') }}');
		showWN('{{ path('relais_relais_layoutShowWN') }}');
		showDB('{{ path('relais_relais_layoutShowDB') }}');
	});
</script>
{% endblock %}
