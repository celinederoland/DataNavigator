{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

	<h1>{{ 'connection'|trans }}</h1>
	<p>{{ 'pasdecompte.part1' | trans }} <a href="{{ path('fos_user_registration_register')}}">{{ 'pasdecompte.part2' | trans }}</a></p>

	{% if error %}
		<div>{{ error|trans }}</div>
	{% endif %}

	<form action="{{ path("fos_user_security_check") }}" method="post">

		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		<table>
			<tr>
				<td><label for="username">{{ 'username' | trans }}</label></td>
				<td><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
			</tr><tr>
				<td><label for="password">{{ 'pass' | trans }}</label></td>
				<td><input type="password" id="password" name="_password" required="required" /></td>
			</tr><tr>
				<td colspan=2><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
				<label for="remember_me">{{ 'remember' | trans }}</label></td>
			</tr>
		</table>

		<input type="submit" id="_submit" name="_submit" value="{{ 'connection'|trans }}" />

	</form>

{% endblock fos_user_content %}
